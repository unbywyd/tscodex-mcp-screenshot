{
  "name": "@tscodex/mcp-screenshot",
  "version": "0.3.1",
  "description": "MCP server for capturing web page screenshots using Playwright",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-screenshot": "./dist/index.js"
  },
  "preferGlobal": true,
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "meta": "node dist/index.js --meta",
    "prepublishOnly": "npm run build",
    "postinstall": "playwright install chromium"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "screenshot",
    "playwright",
    "browser",
    "automation",
    "web-scraping",
    "testing",
    "qa"
  ],
  "author": "unbywyd",
  "license": "MIT",
  "homepage": "https://tscodex.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/unbywyd/tscodex-mcp-screenshot"
  },
  "bugs": {
    "url": "https://github.com/unbywyd/tscodex-mcp-screenshot/issues"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@tscodex/mcp-sdk": "^0.0.6",
    "playwright": "^1.40.0",
    "sharp": "^0.34.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}